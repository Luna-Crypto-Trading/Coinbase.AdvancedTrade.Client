<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PackageId>Coinbase.AdvancedTrade.Client</PackageId>
    <Version>0.1.0-alpha</Version>
    <Authors>Luna Crypto Trading</Authors>
    <Company>Luna Crypto Trading</Company>
    <Description>[ALPHA] Proof-of-concept .NET client library for Coinbase Advanced Trade API. Currently contains basic DI extension method demonstration. Not recommended for production use.</Description>
    <PackageReleaseNotes>Alpha release - proof of concept with basic DI extension method. Contains IHelloWorldService demonstration only. Production features coming in future releases.</PackageReleaseNotes>
    <PackageTags>coinbase;api;client;crypto;trading;dependency-injection</PackageTags>
    <RepositoryUrl>https://github.com/Luna-Crypto-Trading/Coinbase.AdvancedTrade.Client</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageProjectUrl>https://github.com/Luna-Crypto-Trading/Coinbase.AdvancedTrade.Client</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\README.md" Pack="true" PackagePath="\"/>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="9.0.0" />
  </ItemGroup>

</Project>
